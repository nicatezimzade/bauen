@model List<Banner>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Partners</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Text</th>
                        <th>Image</th>
                        <th>BtnLink</th>
                        <th>BtnText</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Banner item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Text</td>
                        <td>
                            <img src="~/img/slider/@item.Img" style="width:50px" />
                        </td>
                        <td>@item.BtnLink</td>
                        <td>@item.BtnText</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-1">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-1">
                                <i class="fas fa-fw fa-wrench"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-1">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}