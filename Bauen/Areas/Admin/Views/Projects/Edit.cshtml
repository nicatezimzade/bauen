@model Project
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Project</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <p>Current images:</p>
                    @foreach (ProjectImage item in Model.ProjectImages)
                    {
                        <img src="/img/projects/@item.Img" style="width:200px" class="rounded d-block mb-3" />

                    }
                </div>
                <div class="col-md-6 mb-4">
                    <input type="hidden" asp-for="Image" />
                    <label asp-for="ImageFile"></label>
                    <div class="custom-file">
                        <input accept="image/*" class="custom-file-input" asp-for="ImageFile" multiple>
                        <label class="custom-file-label">
                            Choose
                            file...
                        </label>
                        <span class="text-danger small" asp-validation-for="ImageFile"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-primary">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


